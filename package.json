{
  "name": "humanresources",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run emulators\"",
    "build": "vite build",
    "build:functions": "pnpm --filter functions run build",
    "deploy": "firebase deploy --only functions",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "emulators": "firebase emulators:start",
    "emulators:with-build": "pnpm run build:functions && firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import=./emulator-data",
    "seed:rbac": "cd packages/scripts && pnpm seed:rbac",
    "seed:policies": "cd packages/scripts && pnpm seed:policies",
    "seed:people": "cd packages/scripts && pnpm seed:people",
    "seed:candidates": "cd packages/scripts && pnpm seed:candidates",
    "seed:users": "cd packages/scripts && pnpm seed:users",
    "seed:attendance": "cd packages/scripts && tsx src/seed/attendance/index.ts",
    "seed:all": "cd packages/scripts && pnpm seed:all",
    "clear:emulator": "cd packages/scripts && pnpm clear:emulator",
    "reset:emulator": "pnpm clear:emulator && pnpm seed:all",
    "clean:employees": "tsx scripts/clean-invalid-employees.ts",
    "deploy:hosting:dev": "firebase deploy --only hosting --project hr-dev",
    "deploy:functions:dev": "firebase deploy --only functions --project hr-dev"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.90.2",
    "antd": "^5.27.0",
    "dayjs": "^1.11.10",
    "firebase": "^12.0.0",
    "lucide-react": "^0.542.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.66.0",
    "react-router-dom": "^6.23.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4",
    "vite": "^6.4.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
